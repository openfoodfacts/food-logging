{
  "$id": "https://static.openfoodfacts.org/food-logging/metadata.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "columns": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "$ref": "#/$defs/timeColumn" },
          { "$ref": "#/$defs/mealColumn" },
          { "$ref": "#/$defs/recipeColumn" },
          { "$ref": "#/$defs/foodColumn" },
          { "$ref": "#/$defs/enteredQuantityColumn" },
          { "$ref": "#/$defs/enteredUnitColumn" },
          { "$ref": "#/$defs/quantityColumn" },
          { "$ref": "#/$defs/unitColumn" },
          { "$ref": "#/$defs/facetColumn" },
          { "$ref": "#/$defs/sourceColumn" },
          { "$ref": "#/$defs/codeColumn" },
          { "$ref": "#/$defs/imageColumn" },
          { "$ref": "#/$defs/customColumn" }
        ]
      }
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}$"
    },
    "timezone": {
      "type": "string",
      "pattern": "^(?:(?:[A-Za-z_\\-]+\\/[A-Za-z_\\-]+(?:\\/[A-Za-z_\\-]+)?)|(?:Etc\\/[A-Za-z0-9+\\-]+(?:\\/[A-Za-z0-9]+)?|(?:CET|CST6CDT|EET|EST|EST5EDT|MET|MST|MST7MDT|PST8PDT|HST)))$"
    }
  },
  "required": ["columns", "locale"],
  "additionalProperties": true,
  "$defs": {
    "baseColumn": {
      "type": "object",
      "properties": {
        "sequence": { "type": "integer" }
      },
      "required": ["type"]
    },
    "timeColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "time" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "mealColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "meal" },
            "values": {
              "type": "object",
              "additionalProperties": {
                "$ref": "meal-type.json#/$defs/mealType"
              }
            }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "recipeColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "recipe" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "foodColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "food" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "enteredQuantityColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "entered_quantity" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "enteredUnitColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "entered_unit" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "quantityColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "quantity" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "unitColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "unit" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "facetColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "facet" },
            "code": {
              "$ref": "facets.json#/$defs/facetCode"
            },
            "factor": { "type": "integer" }
          },
          "title": "Replace code with enums from nutriments taxonomy",
          "required": ["code"]
        }
      ],
      "unevaluatedProperties": false
    },
    "sourceColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "source" },
            "values": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/sourceValue"
              }
            }
          },
          "required": ["values"]
        }
      ],
      "unevaluatedProperties": false
    },
    "sourceValue": {
      "type": "object",
      "properties": {
        "source": { "$ref": "source-type.json#/$defs/sourceType" },
        "location": { "type": "string" }
      },
      "required": ["source"]
    },
    "codeColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "code" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "imageColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "image" }
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "customColumn": {
      "allOf": [
        { "$ref": "#/$defs/baseColumn" },
        {
          "properties": {
            "type": { "const": "custom" },
            "code": { "type": "string" }
          },
          "required": ["code"]
        }
      ],
      "additionalProperties": true
    }
  }
}
