{
  "$id": "https://static.openfoodfacts.org/food-logging/metadata.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "columns": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "time" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "meal" },
                  "values": {
                    "type": "object",
                    "additionalProperties": {
                      "enum": [
                        "breakfast",
                        "second-breakfast",
                        "brunch",
                        "elevenses",
                        "lunch",
                        "tea",
                        "dinner",
                        "supper",
                        "high-tea",
                        "siu-yeh",
                        "snack",
                        "daily"
                      ]
                    }
                  }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "recipe" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "food" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "entered_quantity" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "entered_unit" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "quantity" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "unit" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "facet" },
                  "code": {
                    "$ref": "https://static.openfoodfacts.org/food-logging/facets.json#/$defs/code"
                  },
                  "factor": { "type": "integer" }
                },
                "title": "Replace code with enums from nutriments taxonomy",
                "required": ["code"]
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "source" },
                  "values": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object",
                      "properties": {
                        "source": { "enum": ["gtin", "plu"] },
                        "location": { "type": "string" }
                      },
                      "required": ["source"]
                    }
                  }
                },
                "required": ["values"]
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "code" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "image" }
                }
              }
            ],
            "unevaluatedProperties": false
          },
          {
            "allOf": [
              { "$ref": "#/$defs/baseColumn" },
              {
                "properties": {
                  "type": { "const": "custom" },
                  "code": { "type": "string" }
                },
                "required": ["code"]
              }
            ]
          }
        ]
      }
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}$"
    },
    "timezone": {
      "type": "string",
      "pattern": "^(?:(?:[A-Za-z_\\-]+\\/[A-Za-z_\\-]+(?:\\/[A-Za-z_\\-]+)?)|(?:Etc\\/[A-Za-z0-9+\\-]+(?:\\/[A-Za-z0-9]+)?|(?:CET|CST6CDT|EET|EST|EST5EDT|MET|MST|MST7MDT|PST8PDT|HST)))$"
    }
  },
  "required": ["columns", "locale"],
  "additionalProperties": true,
  "$defs": {
    "baseColumn": {
      "type": "object",
      "properties": {
        "sequence": { "type": "integer" }
      },
      "required": ["type"]
    }
  }
}
