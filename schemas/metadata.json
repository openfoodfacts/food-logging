{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "columns": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "time"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "meal"
              },
              "sequence": {
                "type": "integer"
              },
              "values": {
                "type": "object",
                "additionalProperties": {
                  "enum": [
                    "breakfast",
                    "second-breakfast",
                    "brunch",
                    "elevenses",
                    "lunch",
                    "tea",
                    "dinner",
                    "supper",
                    "high-tea",
                    "siu-yeh",
                    "snack",
                    "daily"
                  ]
                }
              }
            },
            "title": "Test for values",
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "recipe"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "food"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "entered_quantity"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "entered_unit"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "quantity"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "unit"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "facet"
              },
              "sequence": {
                "type": "integer"
              },
              "code": {
                "type": "string"
              },
              "factor": {
                "type": "integer"
              }
            },
            "title": "Replace code with enums from nutriments taxonomy",
            "required": ["type", "code"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "source"
              },
              "sequence": {
                "type": "integer"
              },
              "values": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "source": {"enum": ["gtin","plu"]},
                    "location": {"type": "string"}
                  },
                  "required": ["source"]
                }
              }
            },
            "title": "TBA tests for sources and ",
            "required": ["type", "values"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "code"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "properties": {
              "type": {
                "const": "image"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "custom"
              },
              "code": {
                "type": "string"
              },
              "sequence": {
                "type": "integer"
              }
            },
            "required": ["type", "code"]
          }
        ]
      }
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}$"
    },
    "timezone": {
      "type": "string",
      "pattern": "^(?:(?:[A-Za-z_\\-]+\\/[A-Za-z_\\-]+(?:\\/[A-Za-z_\\-]+)?)|(?:Etc\\/[A-Za-z0-9+\\-]+(?:\\/[A-Za-z0-9]+)?|(?:CET|CST6CDT|EET|EST|EST5EDT|MET|MST|MST7MDT|PST8PDT|HST)))$"
    }
  },
  "required": ["columns", "locale"],
  "additionalProperties": true
}
